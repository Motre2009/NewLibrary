<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="NewLibrary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="using:NewLibrary"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="NewLibrary">
    <NavigationView x:Name="NavView" PaneDisplayMode="LeftCompact" Header="Усі книги" SelectionChanged="NavView_SelectionChanged">
        <NavigationView.MenuItems>
            <NavigationViewItem Content="Усі книги" Icon="Library" Tag="AllBooks"/>
            <NavigationViewItem Content="За жанрами" Icon="Filter" Tag="ByGenre"/>
            <NavigationViewItem Content="Вибране" Icon="Favorite" Tag="Favorites`Favorites"/>
        </NavigationView.MenuItems>
        <Frame x:Name="ContentFrame"/>
    </NavigationView>
</Window>